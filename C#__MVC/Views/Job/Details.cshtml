                            {
                                <!-- Nếu hết hạn, hiển thị nút Apply Now -->
                                <form method="post" asp-action="ShowMessage" asp-route-id="@Model.JobId">
                                    <button type="submit" class="btn btn-danger">Apply Now</button>
                                </form>
                            }
                            else
