                    <div class="form-inputs upload">
                        <p>Upload Your Cv</p>
                        <input type="file" id="fileselect" name="Cv" required onchange="showFileName()" />
                        <div id="filedrag">Upload</div>
                        <!-- Nơi để hiện tên file -->
