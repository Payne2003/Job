    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ResetPasswordModel

<div class="inner_page_agile">
	<h3>Login</h3>


</div>
<!--//banner -->
<!--/w3_short-->
<div class="services-breadcrumb_w3layouts">
	<div class="inner_breadcrumb">

		<ul class="short_w3ls" _w3ls>
			<li><a href="index.html">Home</a><span>|</span></li>
			<li>ResetPassword</li>
		</ul>
	</div>
</div>
<div class="inner_content_info_agileits">
	<div class="container">
		<div class="tittle_head_w3ls">
			<h3 class="tittle three">Reset your Password </h3>
		</div>
		<div class="inner_sec_grids_info_w3ls">
			<div class="signin-form">
				<div class="login-form-rec">
					<div asp-validation-summary="All" class="text-danger"></div>
					<form asp-action="ResetPassword" method="post">
						<div class="form-group">
							<input type="Email" asp-for="Email" placeholder="Email" require />
						</div>						<div class="form-group">
							<input type="password" asp-for="Password" placeholder="Password" require />
						</div>
						<div class="form-group">
							<input type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" require />
						</div>
						<div class="tp">
							<input type="submit" value="ResetPassword" />
						</div>

					</form>			
				</div>
			</div>
		</div>
	</div>
</div>