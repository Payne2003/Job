    <script type="text/javascript">
        //nút search
        $(document).ready(function () {
            $('.search-field input').on('keypress', function (e) {
                if (e.which == 13) { // Khi nhấn phím Enter
                    e.preventDefault(); // Ngăn hành vi submit mặc định của form

                    let query = $(this).val(); // Lấy giá trị từ input

                    // Kiểm tra nếu query không rỗng
                    if (query.trim() === '') {
                        alert('Please enter a search query.');
                        return;
                    }

                    // Lấy URL hiện tại
                    let fullPath = window.location.pathname;
                    console.log(`Full path: ${fullPath}`); // Log full path for debugging

                    // Phân tích URL để lấy Controller
                    let segments = fullPath.split('/');
                    let currentController = segments.filter(segment => segment.trim().length > 0)[0]; // Lấy phần controller từ URL

                    console.log(`Controller detected: ${currentController}`); // Log the controller for debugging

                    // Xác định URL tìm kiếm dựa trên controller hiện tại
                    let searchUrl;
                    switch (currentController) {
                        case 'Jobmanager':
                            searchUrl = `/Jobmanager/Search?query=${encodeURIComponent(query)}`;
                            break;
                        case 'JobRequest':
                            searchUrl = `/JobRequest/Search?query=${encodeURIComponent(query)}`;
                            break;
                        case 'Candidate':
                            searchUrl = `/Candidate/Search?query=${encodeURIComponent(query)}`;
                            break;
                        case 'Category':
                            searchUrl = `/Category/Search?query=${encodeURIComponent(query)}`;
                            break;
                        case 'Recruiter':
                            searchUrl = `/Recruiter/Search?query=${encodeURIComponent(query)}`;
                            break;
                        default:
                            alert('Search function is not available on this page.');
                            return;
                    }

                    // Chuyển hướng tới URL tìm kiếm
                    window.location.href = searchUrl;
                }
            });
        });


        $(document).ready(function () {
            $.ajax({
                url: '/Auth/CheckAuthenticationAdmin', // Gọi đến API kiểm tra xác thực người dùng
                success: function (response) {
                    console.log(response);

                    if (response.isAuthenticated) {

                        if (response.isAdmin) {
                            // Gán tên admin vào thẻ có class admin_name
                            $('.admin_name').html(response.name);
                        }

                        // Thêm hành động Logout cho tất cả các trường hợp
                        $('.logout').click(function () {
                            window.location.href = '/Auth/Logout';
                        });
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error:", status, error);
                }
            });
        });

        // Lấy tất cả các thẻ .nav-item
        const navItems = document.querySelectorAll('.nav-item');

        // Duyệt qua các thẻ .nav-item và thêm sự kiện click
        navItems.forEach(item => {
            item.addEventListener('click', function () {
                // Xóa class active khỏi tất cả các thẻ .nav-item
                navItems.forEach(i => i.classList.remove('active'));

                // Thêm class active vào thẻ vừa được click
                this.classList.add('active');
            });
        });



    </script>
