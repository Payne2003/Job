		display: flex;
		justify-content: space-between;
		width: 100%;
	}

	.banner_bottom_left, .banner_bottom_right {
		width: 45%;
		opacity: 0;
		transform: translateX(-300px); /* Move the left content off screen initially */
		transition: all 3s ease;
	}

	.banner_bottom_right {
		transform: translateX(300px); /* Move the image off screen initially */
	}

	.banner-bottom.active .banner_bottom_left, .banner-bottom.active .banner_bottom_right {
		opacity: 1;
		transform: translateX(0); /* Move to center */
	}

	.some_agile_facts {
		opacity: 0;
		transform: translateY(50px); /* Start with the list moved down */
		transition: opacity 2s ease, transform 2s ease; /* Smooth transition */
	}

		.some_agile_facts.visible {
			opacity: 1; /* Make it visible */
			transform: translateY(0); /* Bring it back to its original position */
		}

	ul.some_agile_facts li:hover{
		color:green;
	}


	/* You can add a simple transition effect when you scroll */
	img {
		transition: transform 3''s ease-out;
	}
	/* Ẩn nội dung ban đầu */
	.services-left, .services-middle, .services-left-top, .services-middle-left {
		opacity: 0; /* Nội dung ban đầu bị ẩn */
		transform: translateY(50px); /* Vị trí ban đầu (di chuyển từ dưới lên) */
		transition: opacity 1s ease, transform 1s ease; /* Hiệu ứng mượt */
	}

		/* Khi xuất hiện trong viewport */
		.services-left.active,
		.services-middle.active,
		.services-left-top.active,
		.services-middle-left.active {
			opacity: 1; /* Hiển thị nội dung */
