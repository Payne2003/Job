@section Scripts {
	<script>
		$(document).on('click', '.nav-item', function (e) {
			var id = $(this).attr("id");

			$.ajax({
				url: "/Job/JobByCategory",
				data: { id: id },
				success: function (response) {
					$("div#myTabContent").html(response);
				}
			});
		});
		$(document).ready(function () {
			$('#btn-find_job').click(function (e) {
				e.preventDefault(); // Ngăn chặn việc gửi form theo cách thông thường

				// Lấy dữ liệu từ các trường input và select
				var keyword = $('#keyword').val();
				var locationId = $('#location').val();
				var categoryId = $('#category').val();

				// Tạo URL với tham số tìm kiếm
				var url = '/Job/FindJob?key=' + encodeURIComponent(keyword) +
					'&locationId=' + encodeURIComponent(locationId) +
					'&categoryId=' + encodeURIComponent(categoryId);

				// Chuyển hướng đến URL mới
				window.location.href = url;
			});
		});
		window.addEventListener('scroll', function () {
    var banner = document.querySelector('.banner-bottom');
    var bannerPosition = banner.getBoundingClientRect().top;
    var screenPosition = window.innerHeight;

    if (bannerPosition < screenPosition) {
        banner.classList.add('active');
    } else {
        banner.classList.remove('active');
    }
});
		window.addEventListener('scroll', function () {
			var factsList = document.querySelector('.some_agile_facts');
			var factsPosition = factsList.getBoundingClientRect().top;
			var screenPosition = window.innerHeight;

			if (factsPosition < screenPosition) {
				factsList.classList.add('visible');
			} else {
				factsList.classList.remove('visible');
			}
		});
		window.addEventListener('scroll', function () {
			var elements = document.querySelectorAll('.services-left, .services-middle, .services-left-top, .services-middle-left');
			var windowHeight = window.innerHeight;

			elements.forEach(function (element) {
				var elementPosition = element.getBoundingClientRect().top;

				// Kiểm tra xem phần tử có trong viewport không
				if (elementPosition < windowHeight - 100) {
					element.classList.add('active');
				} else {
					element.classList.remove('active'); // Gỡ lớp nếu ra khỏi viewport
				}
			});
		});

	</script>
}
